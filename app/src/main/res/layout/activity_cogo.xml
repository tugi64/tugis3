<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvCOGOTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COGO"
        android:textSize="24sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etCOGOInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="COGO Girişi (ör: A,B,C noktaları)"
        android:inputType="text"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnCalculateCOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COGO Hesapla"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tvCOGOResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COGO sonucu burada gösterilecek"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
