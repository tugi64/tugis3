<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvCoordinateConverterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinate Converter"
        android:textSize="24sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etSourceCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kaynak Koordinat (BLH veya NEH)"
        android:inputType="text"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnConvertCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dönüştür"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tvConvertedCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dönüştürülmüş koordinat burada gösterilecek"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <!-- Fonksiyonel içerik buraya eklenecek -->
</LinearLayout>
