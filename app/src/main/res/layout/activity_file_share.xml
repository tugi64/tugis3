<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvFileShareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Share"
        android:textSize="24sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paylaşılacak Dosya Yolu"
        android:inputType="text"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnShareFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosyayı Paylaş"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tvFileShareResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paylaşım sonucu burada gösterilecek"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
