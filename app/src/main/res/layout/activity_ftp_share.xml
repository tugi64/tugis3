<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvFTPShareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FTP Share"
        android:textSize="24sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etFTPServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FTP Sunucu IP"
        android:inputType="text"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/etFTPUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        android:layout_marginTop="8dp" />
    <EditText
        android:id="@+id/etFTPPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnConnectFTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bağlan ve Paylaş"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/tvFTPResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FTP sonucu burada gösterilecek"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
