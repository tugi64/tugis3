<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvToolsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tools Bölümü"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnLocalization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localization"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnCoordinateConverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordinate Converter"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnAngleConverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angle Converter"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnCOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COGO"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnFTPShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FTP Share"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnFileShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File Share"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btnPostProcessPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post-Process Points"
        android:layout_marginTop="8dp" />
</LinearLayout>
